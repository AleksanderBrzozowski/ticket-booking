<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-building-types-table" author="abrzozowski">
        <createTable tableName="building_types">
            <column name="ID" type="SMALLINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_building_type"/>
            </column>
            <column name="name" type="NVARCHAR(16)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-building-table" author="abrzozowski">
        <createTable tableName="buildings">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="NVARCHAR(64)">
                    <constraints nullable="false"/>
            </column>
            <column name="city" type="NVARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="NVARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="house_number" type="NVARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="x" type="NVARCHAR(16)"/>
            <column name="y" type="NVARCHAR(16)"/>
            <column name="type_ID" type="SMALLINT">
                <constraints nullable="false" foreignKeyName="building_building_type_FK" referencedColumnNames="ID" referencedTableName="building_types"/>
            </column>
        </createTable>
    </changeSet>

    <include file="db/changelog/buildings-sample-data.xml"/>

    <changeSet id="create-rooms-table" author="abrzozowski">
        <createTable tableName="rooms">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="Room_PK"/>
            </column>
            <column name="number" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="NVARCHAR(32)">
                <constraints nullable="true"/>
            </column>
            <column name="building_ID" type="BIGINT">
                <constraints foreignKeyName="room_building_FK" referencedTableName="buildings" referencedColumnNames="ID" nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="rooms" columnNames="building_ID, number"/>
    </changeSet>

    <include file="db/changelog/rooms-sample-data.xml"/>

</databaseChangeLog>