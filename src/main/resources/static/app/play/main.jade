.progress.progress-striped.active(ng-if="vm.loading")
    .progress-bar(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%")
div(ng-if="!vm.loading")
    .row
        div(ng-repeat="play in vm.plays")
            .clearfix(ng-if="$index % 4 == 0")
            .col-md-3
                h4 {{play.name}}
                p(ng-if="play.description") {{play.description}}
                p(ng-if="!play.description")
                    i {{'PLAY.NO_DESCRIPTION' | translate}}
                button.btn.btn-primary(ng-click="vm.choosePlay(play)") {{'CHOOSE' | translate}}
