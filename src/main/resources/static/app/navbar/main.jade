nav.navbar.navbar-default
    .container-fluid
        .navbar-header
            a.navbar-brand
                i.glyphicon.glyphicon-film
        .collapse.navbar-collapse
            ul.nav.navbar-nav
                li.nav-item(ng-repeat="bar in vm.bars" ng-class="{'active': bar.active}")
                    a(href="" ng-click="vm.menuBarClick(bar)") {{bar.name | translate}}
            .col-md-6
                form.navbar-form
                    .input-group
                        input.input.form-control(type="text" placeholder="{{'NAVBAR.SEARCH' | translate}}")
                        .input-group-btn
                            button.btn.btn-default(ng-disabled="true")
                                i.glyphicon.glyphicon-search