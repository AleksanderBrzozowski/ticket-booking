nav.navbar.navbar-default
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(type="button" ng-click="navbarCollapsed = !navbarCollapsed")
                span.sr-only {{NAVBAR.TOGGLE_NAVIGATION | translate}}
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand
                i.glyphicon.glyphicon-film
        .collapse.navbar-collapse(uib-collapse="navbarCollapsed")
            ul.nav.navbar-nav
                li(ng-repeat="bar in vm.bars" ng-class="{'active': bar.active}")
                    a(href="" ng-click="vm.menuBarClick(bar); $scope.navbarCollapsed = true;") {{bar.name | translate}}
                form.navbar-form.navbar-left(ng-submit="vm.playQueryAction()")
                    .input-group
                        input.input.form-control(type="text" placeholder="{{'NAVBAR.SEARCH' | translate}}" ng-model="vm.playQuery" ng-model-options="{updateOn: 'blur'}")
                        .input-group-btn
                            button.btn.btn-default
                                i.glyphicon.glyphicon-search